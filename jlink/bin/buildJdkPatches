#!/bin/bash

main() {
    init "$@"
    buildModule "java.base"
    println "Done."
}

buildModule() {
    local moduleName="${1}"
    compileModule ${moduleName}
    createPatchesJar ${moduleName}
}

compileModule() {
    local moduleName="${1}"
    local srcDir="${sourcesDir}/${moduleName}"
    local dstDir="${classesDir}/${moduleName}"

    println "Compiling ${moduleName} to ${dstDir}"
    ${javaHome}/bin/javac ${jvmArgs} -d "${dstDir}" $(find "${srcDir}" -name "*.java") || fail
}

createPatchesJar() {
    local moduleName="${1}"
    local file="${patchesDir}/${moduleName}-patch.jar"
    local srcDir="${classesDir}/${moduleName}"
    println "Creating ${file}"
    cd ${srcDir} || fail
    jar cvfM ${file} . || fail
}

init() {
    readonly scriptName=$(basename "${0}")
    readonly binDir=$(dirname "${0}")
    readonly projectDir=$(cd "${binDir}"/..; pwd)
    readonly rootDir="${projectDir}/etc"
    readonly sourcesDir="${rootDir}/jdk-sources"
    readonly targetDir="${rootDir}/target"
    readonly patchesDir="${rootDir}/patches"
    readonly classesDir="${targetDir}/jdk-classes"

    [[ ${JAVA_11_HOME} ]] && javaHome=${JAVA_11_HOME} || javaHome=${JAVA_HOME}

    [[ -d ${targetDir} ]] && rm -rf "${targetDir}"
    [[ -d ${patchesDir} ]] && rm -rf "${patchesDir}"
    mkdir -p "${classesDir}"
    mkdir "${patchesDir}"

    appendVar jvmArgs --add-exports="java.base/jdk.internal.misc=ALL-UNNAMED"
    appendVar jvmArgs --add-exports="java.base/jdk.internal.loader=ALL-UNNAMED"
    appendVar jvmArgs --add-exports="java.base/jdk.internal.perf=ALL-UNNAMED"
}

appendVar() {
    local var=${1}
    local value=${2}
    local sep=${3:- }
    export ${var}="${!var:+${!var}${sep}}${value}"
}

println() {
    printf "${1}\n" "${@:2}"
}

fail() {
    println "${1}"
    exit 1
}

main "$@"
